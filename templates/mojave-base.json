{
  "builders": [
    {
      "type": "veertu-anka",
      "vm_name": "mojave-base",
      "installer_app": "/Applications/Install macOS Mojave.app/",
      "cpu_count": "2",
      "ram_size": "4G",
      "disk_size": "80G",
      "boot_delay": "30s"
    }
  ],
  "provisioners": [
    {
      "inline": [
        "echo 'Disabling spotlight...'",
        "sudo mdutil -a -i off"
      ],
      "type": "shell"
    },
    {
      "inline": [
        "yes '' | ruby -e \"$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)\""
      ],
      "type": "shell"
    },
    {
      "inline": [
        "echo \"export LANG=en_US.UTF-8\" >> ~/.profile",
        "echo \"export PATH=/usr/local/bin:$PATH\" >> ~/.profile",
        "echo \"export HOMEBREW_NO_AUTO_UPDATE=1\" >> ~/.profile",
        "source ~/.profile"
      ],
      "type": "shell"
    },
    {
      "inline": [
        "brew --version",
        "brew update",
      ],
      "type": "shell"
    },
    {
      "inline": [
        "brew install cmake",
        "brew install gcc",
        "brew install wget",
        "brew install mysql",
        "brew install node",
        "brew install python",
        "brew install clojure",
        "brew install php"
      ],
      "type": "shell"
    },
    {
      "inline": [
        "brew upgrade",
        "brew cleanup"
      ],
      "type": "shell"
    }
  ]
}
