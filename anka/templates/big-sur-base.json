{
  "builders": [
    {
      "type": "veertu-anka",
      "vm_name": "big-sur-base",
      "source_vm_name": "big-sur-vanilla",
      "cpu_count": "2",
      "enable_htt": true,
      "ram_size": "8G",
      "disk_size": "80G",
      "boot_delay": "30s"
    }
  ],
  "provisioners": [
    {
      "inline": [
        "echo 'Disabling spotlight...'",
        "sudo mdutil -a -i off"
      ],
      "type": "shell"
    },
    {
      "inline": [
        "yes '' | ruby -e \"$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)\""
      ],
      "type": "shell"
    },
    {
      "inline": [
        "echo \"export LANG=en_US.UTF-8\" >> ~/.profile",
        "echo \"export PATH=/usr/local/bin:$PATH\" >> ~/.profile",
        "echo \"export HOMEBREW_NO_AUTO_UPDATE=1\" >> ~/.profile",
        "echo \"export HOMEBREW_NO_INSTALL_CLEANUP=1\" >> ~/.profile",
        "source ~/.profile"
      ],
      "type": "shell"
    },
    {
      "inline": [
        "brew --version",
        "brew update",
        "brew install wget"
      ],
      "type": "shell"
    },
    {
      "inline": [
        "brew install cmake",
        "brew install gcc"
      ],
      "type": "shell"
    },
    {
      "inline": [
        "brew install ruby ruby-build rbenv",
        "echo 'if which rbenv > /dev/null; then eval \"$(rbenv init -)\"; fi' >> ~/.profile",
        "source ~/.profile",
        "sudo gem install bundler"
      ],
      "type": "shell"
    },
    {
      "inline": [
        "sudo safaridriver --enable",
        "networksetup -setdnsservers Ethernet 8.8.8.8 8.8.4.4 1.1.1.1"
      ],
      "type": "shell"
    }
  ]
}
